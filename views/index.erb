<div id="word_form">
  <form action="/score">
    <div class="form-group">
      <div id="input-area">
         <label for="word">Enter a word to see its scrabble score</label>
         <input id="word" name="word" class="form-control" type="text">
         <h4 id="error" =><%= @message %></h4>
      </div>
    </div>
    <div id="calculate-button">
      <button type="submit" class="btn-success">Calculate</button>
    </div>
    <!-- <h4 id="error" =><%= @message %></h4> -->
  </form>
</div>
